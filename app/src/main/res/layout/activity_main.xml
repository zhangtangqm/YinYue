<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <include layout="@layout/nav_bar"/>
   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       android:layout_height="140dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:src="@mipmap/picture_read"
    android:id="@+id/read"
    android:onClick="onButtonItemClick"
    />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

           <TextView
               android:layout_width="190dp"
               android:layout_marginTop="40dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="30dp"
               android:layout_gravity="center"
               android:textSize="20sp"
               android:text="阅读是心灵的旅行"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="50dp"
               android:layout_marginTop="10dp"
               android:backgroundTint="@color/itemColor"
               android:onClick="onItemAClick"
               android:text="阅世界·背景音乐"
               />
       </LinearLayout>

   </LinearLayout>
    <View
        style="@style/line"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="140dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/picture_xinqing"
            android:id="@+id/write"
            android:onClick="onImageBClick"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="190dp"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="记录本身已是反抗"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/itemColor"
                android:onClick="onItemAClick"
                android:text="心情小记·背景音乐"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        style="@style/line"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="150dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/picture_music"
            android:id="@+id/music"
            android:onClick="onImageCClick"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:text="有音乐的地方"
                />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:text="悲伤就有了家乡"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>